<div class="container mt-4">
  <h1 class="mb-4"><%= @place.name %></h1>

  <h2 class="mb-3">My Entries</h2>
  <div class="mb-4">
    <% if @current_user %>
      <a href="/entries/new?place_id=<%= @place.id %>" class="btn btn-primary">New Entry</a>
    <% end %>
  </div>
  <div class="row">
    <% @entries.each do |entry| %>
      <% if @current_user && entry.user_id == @current_user.id %> 
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h3 class="card-title"><%= entry.title %></h3>
              <h4 class="card-subtitle text-muted"><%= entry.occurred_on %></h4>
              <p class="card-text mt-2"><%= entry.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="mt-4">
    <a href="/places" class="btn btn-secondary">Back to All Places</a>
  </div>
</div>
<div class="container mt-4">
  <h1 class="mb-4"><%= @place.name %></h1>

  <h2 class="mb-3">My Entries</h2>
  <div class="mb-4">
    <% if @current_user %>
      <a href="/entries/new?place_id=<%= @place.id %>" class="btn btn-primary">New Entry</a>
    <% end %>
  </div>
  <div class="row">
        <% @entries.each do |entry| %>
          <% if entry.user_id == @current_user.id %>
            <div class="col-md-4 mb-4"> <!-- 3 entries per row on medium+ screens -->
              <h4 class="mb-1"><%= entry.title %></h4>
              <p class="text-muted mb-2"> <%= entry.occurred_on %></p>

             <!-- Image inside a fixed-height card box -->
              <% if entry.image.attached? %>
                <div class="card shadow-sm">
                  <div class="card-body d-flex justify-content-center align-items-center" style="height: 300px; overflow: hidden;">
                    <img src="<%= url_for(entry.image) %>" class="img-fluid rounded" style="max-height: 100%; object-fit: cover;" alt="Entry Image">
                  </div>
                </div>
              <% end %>
              <p class="mt-2"><strong><%= entry.description %></strong></p>
            </div>
          <% end %>
        <% end %>
  </div>

  <div class="mt-4">
    <a href="/places" class="btn btn-secondary">Back to All Places</a>
  </div>
</div>